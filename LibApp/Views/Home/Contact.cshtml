@{
    ViewData["Title"] = "Contact";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="bg-gradient-to-r from-blue-500 to-teal-500 p-8 rounded-lg min-h-screen py-16">

    <div class="text-center mb-12">
        <h1 class="text-4xl font-extrabold text-blue-900">Contact Us</h1>
    </div>

    <div class="max-w-4xl mx-auto text-white px-6 sm:px-10 space-y-8">
        <p class="text-xl">
            We are here to assist you. Please reach out to us using the form below, or find our contact details and location.
        </p>

        <div class="space-y-6">
            <h2 class="text-2xl font-semibold text-blue-900">Our Contact Information</h2>
            <ul class="list-none space-y-4 text-lg">
                <li>
                    <strong>Email:</strong> <a href="mailto:support@librarysystem.com" class="text-white hover:text-blue-300">support@librarysystem.com</a>
                </li>
                <li>
                    <strong>Phone:</strong> +1 (555) 123-4567
                </li>
                <li>
                    <strong>Address:</strong> 123 Library St., Booktown, BKT 54321
                </li>
            </ul>
        </div>

        <div class="space-y-6">
            <h2 class="text-2xl font-semibold text-blue-900">Send Us a Message</h2>
            <form action="#" method="POST" class="bg-white p-6 rounded-lg shadow-lg space-y-6">
                <div class="grid grid-cols-1 sm:grid-cols-2 gap-6">
                    <div>
                        <label for="name" class="block text-sm font-medium text-gray-700">Your Name</label>
                        <input type="text" id="name" name="name" class="w-full p-3 border rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500" required />
                    </div>
                    <div>
                        <label for="email" class="block text-sm font-medium text-gray-700">Your Email</label>
                        <input type="email" id="email" name="email" class="w-full p-3 border rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500" required />
                    </div>
                </div>

                <div>
                    <label for="message" class="block text-sm font-medium text-gray-700">Your Message</label>
                    <textarea id="message" name="message" rows="6" class="w-full p-3 border rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 resize-none" required></textarea>
                </div>


                <button type="submit" class="w-full bg-blue-500 text-white p-3 rounded-lg hover:bg-blue-600 focus:outline-none focus:ring-2 focus:ring-blue-500">
                    Send Message
                </button>
            </form>
        </div>

        <div class="space-y-6">
            <h2 class="text-2xl font-semibold text-blue-900">Follow Us</h2>
            <div class="flex space-x-6 justify-center">
                <a href="https://www.instagram.com" target="_blank" class="text-white hover:text-blue-300 transform hover:scale-110 transition-transform">
                    <i class="fab fa-instagram fa-3x"></i>
                </a>
                <a href="https://www.linkedin.com" target="_blank" class="text-white hover:text-blue-300 transform hover:scale-110 transition-transform">
                    <i class="fab fa-linkedin fa-3x"></i>
                </a>
                <a href="https://www.facebook.com" target="_blank" class="text-white hover:text-blue-300 transform hover:scale-110 transition-transform">
                    <i class="fab fa-facebook fa-3x"></i>
                </a>
                <a href="https://twitter.com" target="_blank" class="text-white hover:text-blue-300 transform hover:scale-110 transition-transform">
                    <i class="fab fa-twitter fa-3x"></i>
                </a>
            </div>
        </div>

        <div class="space-y-6">
            <h2 class="text-2xl font-semibold text-blue-900">Find Us Here</h2>
            <div class="relative h-64 rounded-lg overflow-hidden">
                <iframe class="w-full h-full" src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3163.3298318359115!2d-122.08424968469361!3d37.42206567982157!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x808fb67f2561b4f3%3A0x8a230470e5297fd7!2sGoogleplex!5e0!3m2!1sen!2sus!4v1634599252149!5m2!1sen!2sus" allowfullscreen="" loading="lazy"></iframe>
            </div>
        </div>
    </div>
</div>

<script src="https://kit.fontawesome.com/a076d05399.js"></script>
