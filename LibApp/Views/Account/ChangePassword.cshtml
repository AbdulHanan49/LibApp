@using LibApp.ViewModels;
@model ChangePasswordViewModel;

@{
    ViewData["Title"] = "Change Password";
    Layout = "~/Views/Shared/_AccountLayout.cshtml";
}

<div class="min-h-screen bg-gray-100 flex items-center justify-center">
    <div class="bg-white rounded-lg shadow-lg p-8 w-96">
        <h2 class="text-2xl font-semibold text-center text-gray-700 mb-6">Change Password</h2>

        <form asp-action="ChangePassword" method="post">
            <!-- Validation Summary -->
            <div asp-validation-summary="ModelOnly" class="text-danger mb-4"></div>

            <!-- Email Field -->
            <div class="mb-4">
                <label asp-for="Email" class="block text-sm font-medium text-gray-600">Email</label>
                <input asp-for="Email" class="form-input mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-indigo-500 focus:border-indigo-500" readonly/>
            </div>

            <div class="mb-4">
                <label asp-for="NewPassword" class="block text-sm font-medium text-gray-600">New Password</label>
                <input asp-for="NewPassword" class="form-input mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-indigo-500 focus:border-indigo-500" />
                <span asp-validation-for="NewPassword" class="text-sm text-red-500"></span>
            </div>

            <div class="mb-4">
                <label asp-for="ConfirmNewPassword" class="block text-sm font-medium text-gray-600">Confirm New Password</label>
                <input asp-for="ConfirmNewPassword" class="form-input mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-indigo-500 focus:border-indigo-500" />
                <span asp-validation-for="ConfirmNewPassword" class="text-sm text-red-500"></span>
            </div>

            <!-- Login Button -->
            <div>
                <input type="submit" value="Submit" class="w-full bg-indigo-600 hover:bg-indigo-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:ring-2 focus:ring-indigo-500" />
            </div>

            <!-- Back Link -->
            <div class="text-center mt-4">
                <a asp-controller="Account" asp-action="VerifyEmail" class="text-indigo-600 hover:text-indigo-700 text-sm">Back to Home</a>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial.cshtml");
    }
}
