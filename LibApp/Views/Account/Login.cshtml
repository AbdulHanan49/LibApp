@using LibApp.ViewModels;
@model LoginViewModel;

@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_AccountLayout.cshtml";
}

<div class="min-h-screen bg-gray-100 flex items-center justify-center">
    <div class="bg-white rounded-lg shadow-lg p-8 w-96">
        <h2 class="text-2xl font-semibold text-center text-gray-700 mb-6">Login</h2>

        <form asp-action="Login" method="post">
            <!-- Validation Summary -->
            <div asp-validation-summary="ModelOnly" class="text-danger mb-4"></div>

            <!-- Email Field -->
            <div class="mb-4">
                <label asp-for="Email" class="block text-sm font-medium text-gray-600">Email</label>
                <input asp-for="Email" class="form-input mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-indigo-500 focus:border-indigo-500" />
                <span asp-validation-for="Email" class="text-sm text-red-500"></span>
            </div>

            <!-- Password Field -->
            <div class="mb-4">
                <label asp-for="Password" class="block text-sm font-medium text-gray-600">Password</label>
                <input asp-for="Password" type="password" class="form-input mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-indigo-500 focus:border-indigo-500" />
                <span asp-validation-for="Password" class="text-sm text-red-500"></span>
            </div>

            <div class="float-end">
                <a asp-controller="Account" asp-action="VerifyEmail" class="text-decoration-none">
                    Forgot password?
                </a>
            </div>


            <!-- Remember Me Checkbox -->
            <div class="flex items-center mb-4">
                <input asp-for="RememberMe" type="checkbox" class="form-checkbox text-indigo-600 rounded focus:ring-indigo-500" />
                <label class="ml-2 text-sm text-gray-600">@Html.DisplayNameFor(a => a.RememberMe)</label>
            </div>

            <!-- Login Button -->
            <div>
                <input type="submit" value="Login" class="w-full bg-indigo-600 hover:bg-indigo-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:ring-2 focus:ring-indigo-500" />
            </div>

            <p class="text-center mt-2">
                Don't have an account? <a asp-controller="Account" asp-action="Regitser" class="text-decoration-none">Register</a>
            </p>
            <!-- Back Link -->
            <div class="text-center mt-4">
                <a asp-controller="Home" asp-action="Index" class="text-indigo-600 hover:text-indigo-700 text-sm">Back to Home</a>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial.cshtml");
    }
}
