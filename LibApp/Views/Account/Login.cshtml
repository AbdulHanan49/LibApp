@using LibApp.ViewModels;
@model LoginViewModel;

@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_AccountLayout.cshtml";
}

<div class="min-h-screen bg-gradient-to-br from-indigo-900 via-purple-500 to-indigo-900 flex items-center justify-center">
    <div class="bg-white rounded-xl shadow-lg p-8 w-96 transition-all transform hover:scale-105">
        <h2 class="text-3xl font-bold text-center text-indigo-700 mb-6">Welcome Back</h2>


        <div id="userLoginForm">
            <form asp-action="Login" method="post">

                <div asp-validation-summary="ModelOnly" class="text-red-500 mb-4"></div>


                <div class="mb-6">
                    <label asp-for="Email" class="block text-sm font-medium text-gray-700 mb-1">Email</label>
                    <input asp-for="Email" class="form-input block w-full border border-gray-300 rounded-lg shadow-sm focus:ring-indigo-500 focus:border-indigo-500" />
                    <span asp-validation-for="Email" class="text-xs text-red-500"></span>
                </div>


                <div class="mb-6">
                    <label asp-for="Password" class="block text-sm font-medium text-gray-700 mb-1">Password</label>
                    <input asp-for="Password" type="password" class="form-input block w-full border border-gray-300 rounded-lg shadow-sm focus:ring-indigo-500 focus:border-indigo-500" />
                    <span asp-validation-for="Password" class="text-xs text-red-500"></span>
                </div>

                <div class="flex justify-between items-center mb-6">
                    <div class="flex items-center">
                        <input asp-for="RememberMe" type="checkbox" class="form-checkbox text-indigo-600 rounded focus:ring-indigo-500" />
                        <label class="ml-2 text-sm text-gray-600">@Html.DisplayNameFor(a => a.RememberMe)</label>
                    </div>
                    <a asp-controller="Account" asp-action="VerifyEmail" class="text-indigo-600 hover:underline text-sm">
                        Forgot password?
                    </a>
                </div>

                <div>
                    <button type="submit" class="w-full bg-indigo-600 hover:bg-indigo-700 text-white font-bold py-3 rounded-lg shadow-lg focus:outline-none focus:ring-2 focus:ring-indigo-500 transition duration-200 transform hover:scale-105">
                        Login
                    </button>
                </div>

                <p class="text-center mt-4 text-gray-600">
                    Don't have an account? <a asp-controller="Account" asp-action="Register" class="text-indigo-600 hover:underline">Register</a>
                </p>
            </form>
        </div>

        <div class="text-center mt-6">
            <a asp-controller="Home" asp-action="Index" class="text-indigo-600 hover:underline text-sm">
                Back to Home
            </a>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial.cshtml");
    }
}