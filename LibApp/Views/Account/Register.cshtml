@using LibApp.ViewModels;
@model RegisterViewModel;

@{
    ViewData["Title"] = "Register";
    Layout = "~/Views/Shared/_AccountLayout.cshtml";
}

<div class="min-h-screen bg-gray-100 flex items-center justify-center">
    <div class="bg-white rounded-lg shadow-lg p-8 w-96">
        <h2 class="text-2xl font-semibold text-center text-gray-700 mb-6">Register</h2>

        <form asp-action="Register" method="post">
            <!-- Validation Summary -->
            <div asp-validation-summary="ModelOnly" class="text-danger mb-4"></div>

            <div class="mb-4">
                <label asp-for="Name" class="block text-sm font-medium text-gray-600">Name</label>
                <input asp-for="Name" class="form-input mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-indigo-500 focus:border-indigo-500" />
                <span asp-validation-for="Name" class="text-sm text-red-500"></span>
            </div>

            <!-- Email Field -->
            <div class="mb-4">
                <label asp-for="Email" class="block text-sm font-medium text-gray-600">Email</label>
                <input asp-for="Email" class="form-input mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-indigo-500 focus:border-indigo-500" />
                <span asp-validation-for="Email" class="text-sm text-red-500"></span>
            </div>

            <!-- Password Field -->
            <div class="mb-4">
                <label asp-for="Password" class="block text-sm font-medium text-gray-600">Password</label>
                <input asp-for="Password" type="password" class="form-input mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-indigo-500 focus:border-indigo-500" />
                <span asp-validation-for="Password" class="text-sm text-red-500"></span>
            </div>

            <div class="mb-4">
                <label asp-for="ConfirmPassword" class="block text-sm font-medium text-gray-600">Confirm Password</label>
                <input asp-for="ConfirmPassword" type="password" class="form-input mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-indigo-500 focus:border-indigo-500" />
                <span asp-validation-for="ConfirmPassword" class="text-sm text-red-500"></span>
            </div>

            <!-- Login Button -->
            <div>
                <input type="submit" value="Register" class="w-full bg-indigo-600 hover:bg-indigo-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:ring-2 focus:ring-indigo-500" />
            </div>

            <p class="text-center mt-2">
                Already have an account? <a asp-controller="Account" asp-action="Login" class="text-decoration-none">Login</a>
            </p>
            <!-- Back Link -->
            <div class="text-center mt-4">
                <a asp-controller="Home" asp-action="Index" class="text-indigo-600 hover:text-indigo-700 text-sm">Back to Home</a>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial.cshtml");
    }
}
