@model LibApp.Models.Book

<h2>Edit Book</h2>

<form asp-action="EditBook" method="post">
    <div>
        <label for="Title">Title</label>
        <input type="text" id="Title" name="Title" value="@Model.Title" required />
    </div>

    <div>
        <label for="Author">Author</label>
        <input type="text" id="Author" name="Author" value="@Model.Author" required />
    </div>

    <div>
        <label for="Category">Category</label>
        <input type="text" id="Category" name="Category" value="@Model.Category" required />
    </div>

    <div>
        <label for="Price">Price</label>
        <input type="number" id="Price" name="Price" value="@Model.Price" required />
    </div>

    <div>
        <label for="Quantity">Quantity</label>
        <input type="number" id="Quantity" name="Quantity" value="@Model.Quantity" required />
    </div>

    <div>
        <label for="CoverImagePath">Cover Image Path</label>
        <input type="text" id="CoverImagePath" name="CoverImagePath" value="@Model.CoverImagePath" />
    </div>

    <button type="submit">Save Changes</button>
</form>
