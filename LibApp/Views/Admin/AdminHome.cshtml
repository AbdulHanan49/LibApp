@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

 <style>
    .scrollbar-hide::-webkit-scrollbar {
      display: none;
    }
    .scrollbar-hide {
      -ms-overflow-style: none;
      scrollbar-width: none;
    }
    .calendar-grid {
      display: grid;
      grid-template-columns: repeat(7, 1fr);
      grid-gap: 1rem;
    }
    .calendar-cell {
      text-align: center;
      padding: 1rem;
      background-color: #f1f1f1;
      border-radius: 0.5rem;
      box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
    }
  </style>

<div class="flex flex-1">

    <aside class="bg-blue-700 text-white w-16 md:w-1/6 p-4 flex flex-col items-center space-y-4">

        <a asp-controller="Admin" asp-action="AdminHome" class="sidebar-item w-full py-3 px-4 hover:bg-blue-600 flex items-center justify-center space-x-2">
            <i class="fas fa-home"></i> <span class="sidebar-text hidden md:inline">Dashboard</span>
        </a>
        <a asp-controller="Admin" asp-action="Catalog" class="sidebar-item w-full py-3 px-4 hover:bg-blue-600 flex items-center justify-center space-x-2">
            <i class="fas fa-box"></i> <span class="sidebar-text hidden md:inline">Catalog</span>
        </a>
        <a asp-controller="Admin" asp-action="AddBook" class="sidebar-item w-full py-3 px-4 hover:bg-blue-600 flex items-center justify-center space-x-2">
            <i class="fas fa-plus-circle"></i> <span class="sidebar-text hidden md:inline">Add Book</span>
        </a>


        <a asp-controller="Admin" asp-action="ListUsers" class="sidebar-item w-full py-3 px-4 hover:bg-blue-600 flex items-center justify-center space-x-2">
            <i class="fas fa-users"></i> <span class="sidebar-text hidden md:inline">All Users</span>
        </a>

        <a asp-controller="Admin" asp-action="ListBooks" class="sidebar-item w-full py-3 px-4 hover:bg-blue-600 flex items-center justify-center space-x-2">
            <i class="fas fa-book"></i> <span class="sidebar-text hidden md:inline">All Books</span>
        </a>



        <a asp-controller="Admin" asp-action="Reports" class="sidebar-item w-full py-3 px-4 hover:bg-blue-600 flex items-center justify-center space-x-2">
            <i class="fas fa-chart-line"></i> <span class="sidebar-text hidden md:inline">Reports</span>
        </a>
    </aside>
<main class="flex-1 overflow-y-auto scrollbar-hide p-6 space-y-6">
    <div class="bg-white p-4 rounded-lg shadow-md flex flex-col items-start space-y-2">
        <h2 class="text-xl font-semibold text-gray-800">Hello, Admin!</h2>
        <h3 class="text-sm text-gray-600">Welcome back!</h3>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">

        <div class="bg-white p-4 w-full md:w-[600px] lg:w-[600px] rounded-lg shadow-xl text-center transition-transform transform hover:scale-105 hover:shadow-2xl">
            <h3 class="text-xl font-semibold text-gray-800 mb-4">Calendar</h3>
            <div class="calendar-header flex justify-between mb-4">
                <span class="text-lg font-bold">November 2024</span>
                <span id="current-date" class="text-lg"></span>
            </div>
            <div class="calendar-grid">
                <div class="calendar-cell font-bold">Sun</div>
                <div class="calendar-cell font-bold">Mon</div>
                <div class="calendar-cell font-bold">Tue</div>
                <div class="calendar-cell font-bold">Wed</div>
                <div class="calendar-cell font-bold">Thu</div>
                <div class="calendar-cell font-bold">Fri</div>
                <div class="calendar-cell font-bold">Sat</div>

                <div class="calendar-cell">1</div>
                <div class="calendar-cell">2</div>
                <div class="calendar-cell">3</div>
                <div class="calendar-cell">4</div>
                <div class="calendar-cell">5</div>
                <div class="calendar-cell">6</div>
                <div class="calendar-cell">7</div>
            </div>
        </div>

        <div class="bg-gradient-to-r from-indigo-500 via-purple-500 to-pink-500 p-10 w-full md:w-[600px] lg:w-[600px] rounded-lg shadow-xl flex flex-col items-center transition-transform transform hover:scale-105 hover:shadow-2xl">
            <h3 class="text-xl font-semibold text-white mb-4">Weather</h3>
            <div id="weather" class="text-white text-center">
                <div class="flex flex-col items-center mb-4">
                    <i class="fas fa-sun text-6xl mb-2"></i>
                    <p class="text-xl">Sunny</p>
                    <p class="text-lg">Current temperature: 25°C</p>
                </div>
                <div class="flex justify-between w-full">
                    <div class="text-center">
                        <p class="font-semibold">Tomorrow</p>
                        <i class="fas fa-cloud-sun text-3xl mb-2"></i>
                        <p>28°C</p>
                    </div>
                    <div class="text-center">
                        <p class="font-semibold">Day After</p>
                        <i class="fas fa-cloud-rain text-3xl mb-2"></i>
                        <p>22°C</p>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">

        <div class="bg-gradient-to-r from-gray-700 to-gray-900 p-6 rounded-lg shadow-lg text-white text-center transform transition-all hover:scale-105 hover:shadow-2xl hover:opacity-90">
            <i class="fas fa-users text-4xl mb-4"></i>
            <h4 class="text-xl font-semibold">Total Visitors</h4>
            <p class="text-lg">1,245</p>
        </div>


        <div class="bg-gradient-to-r from-blue-800 to-blue-900 p-6 rounded-lg shadow-lg text-white text-center transform transition-all hover:scale-105 hover:shadow-2xl hover:opacity-90">
            <i class="fas fa-book text-4xl mb-4"></i>
            <h4 class="text-xl font-semibold">Total Books</h4>
            <p class="text-lg">320</p>
        </div>

        <div class="bg-gradient-to-r from-teal-700 to-teal-800 p-6 rounded-lg shadow-lg text-white text-center transform transition-all hover:scale-105 hover:shadow-2xl hover:opacity-90">
            <i class="fas fa-user-graduate text-4xl mb-4"></i>
            <h4 class="text-xl font-semibold">Total Students</h4>
            <p class="text-lg">500</p>
        </div>

        <div class="bg-gradient-to-r from-indigo-700 to-indigo-800 p-6 rounded-lg shadow-lg text-white text-center transform transition-all hover:scale-105 hover:shadow-2xl hover:opacity-90">
            <i class="fas fa-book-reader text-4xl mb-4"></i>
            <h4 class="text-xl font-semibold">Books Borrowed</h4>
            <p class="text-lg">150</p>
        </div>
    </div>


</main>
  </div>


@section Scripts {
    <script>
        document.getElementById('current-date').textContent = new Date().toLocaleDateString();

        async function getWeather() {
            try {
                const response = await fetch('https://api.open-meteo.com/v1/forecast?latitude=35&longitude=139&hourly=temperature_2m');
                if (!response.ok) throw new Error('Network response was not ok');
                const data = await response.json();
                document.getElementById('weather').innerHTML = `
                    <div class="flex flex-col items-center mb-4">
                        <i class="fas fa-sun text-6xl mb-2"></i>
                        <p class="text-xl">${data.hourly.temperature_2m[0]}°C</p>
                        <p class="text-lg">Current temperature</p>
                    </div>`;
            } catch (error) {
                console.error('Weather API Error:', error);
                document.getElementById('weather').textContent = 'Unable to fetch weather data.';
            }
        }

        getWeather();
    </script>



    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial.cshtml");
    }
}