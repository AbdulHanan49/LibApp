<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - LibApp</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/LibApp.styles.css" asp-append-version="true" />
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script src="https://cdn.tailwindcss.com"></script>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">
</head>
<body class="bg-gray-100 text-gray-800 min-h-screen flex flex-col">
    <!-- Header -->
    <header class="bg-blue-700 w-full p-4 shadow flex justify-between items-center">
        <div class="text-2xl font-bold text-white pl-16">SmartLib</div>
        <div class="flex items-center space-x-4">
            <i class="fas fa-bell text-white text-xl cursor-pointer"></i>
            <div class="relative">
                <i class="fas fa-user-circle text-white text-2xl cursor-pointer" onclick="toggleDropdown()"></i>
                <div id="adminDropdown" class="hidden absolute right-0 mt-2 w-48 bg-white rounded-md shadow-lg py-2">
                    <!-- Remove href="#" -->

                    <form asp-controller="Admin" asp-action="Logout" method="post" class="block px-4 py-2">
                        <button type="submit" class="w-full text-left text-gray-800 hover:bg-gray-200">Logout</button>
                    </form>
                </div>
            </div>


        </div>
    </header>
    <div>
        <main role="main">
            @RenderBody()
        </main>
    </div>


    <div class=" flex flex-1">
        <main class=" bg-blue-700 flex-1 overflow-y-auto scrollbar-hide p-6 space-y-6">
            <footer class="bg-blue-700 text-white text-center p-3 rounded-lg mt-6">
                <p>&copy; 2024 SmartLib. All rights reserved.</p>
            </footer>
        </main>
    </div>



    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>

<script>
    function toggleDropdown() {
        const dropdown = document.getElementById('adminDropdown');
        dropdown.classList.toggle('hidden');
    }
</script>

</html>
